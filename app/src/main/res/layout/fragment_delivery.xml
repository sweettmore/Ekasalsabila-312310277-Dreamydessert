<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section with Background -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D3D3D3"
            android:padding="16dp">

            <!-- Title -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery"
                    android:textSize="14sp"
                    android:textColor="#990000"
                    android:paddingBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MENU SELECTION"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#990000"
                    android:paddingBottom="16dp" />
            </LinearLayout>

            <!-- Search and Cart Icons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/pencarian"
                    android:contentDescription="Search Icon" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/cart"
                    android:layout_marginStart="16dp"
                    android:contentDescription="Cart Icon" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="8dp" />

        <!-- Menu Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_gravity="center">

            <!-- Black Forest Cake -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cake2"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/text_black_forest_cake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Black Forest Cake"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:onClick="onCakeNameClick" />
            </LinearLayout>

            <!-- Cheese Cake -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cake3"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/text_cheese_cake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cheese Cake"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:onClick="onCakeNameClick" />
            </LinearLayout>

            <!-- Red Velvet Cake -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cake4"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/text_red_velvet_cake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Red Velvet Cake"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:onClick="onCakeNameClick" />
            </LinearLayout>

            <!-- Chocolate Cake -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cake5"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/text_chocolate_cake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chocolate Cake"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:onClick="onCakeNameClick" />
            </LinearLayout>

            <!-- Fruit Cake -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cake6"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/text_fruit_cake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fruit Cake"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:onClick="onCakeNameClick" />
            </LinearLayout>

            <!-- Ice Cream Cake -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cake7"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/text_ice_cream_cake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ice Cream Cake"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:onClick="onCakeNameClick" />
            </LinearLayout>

            <!-- Mouse Cake -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cake8"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/text_mouse_cake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mouse Cake"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:onClick="onCakeNameClick" />
            </LinearLayout>

            <!-- Crepes Cake -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cake9"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/text_crepes_cake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crepes Cake"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:onClick="onCakeNameClick" />
            </LinearLayout>

        </GridLayout>
    </LinearLayout>
</ScrollView>
