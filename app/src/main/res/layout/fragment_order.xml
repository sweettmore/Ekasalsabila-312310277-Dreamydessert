<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F8F5">

    <!-- Scrollable Content -->
    <android.widget.ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- Title "ORDER HISTORY" -->
            <TextView
                android:id="@+id/tv_order_history_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ORDER HISTORY"
                android:textSize="30sp"
                android:textColor="@color/pink"
                android:fontFamily="@font/tienne"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp" />

            <!-- Icon (list icon) inside a blue box -->
            <ImageView
                android:id="@+id/iv_order_icon"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/list"
                android:contentDescription="Order Icon"/>

            <!-- Text "NOT ORDER YET" -->
            <TextView
                android:id="@+id/tv_no_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOT ORDER YET"
                android:textSize="25sp"
                android:textColor="@color/pink"
                android:fontFamily="@font/tienne"
                android:layout_marginTop="70dp"/>
        </LinearLayout>
    </android.widget.ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
